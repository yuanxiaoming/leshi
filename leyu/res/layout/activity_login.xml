<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/act_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="52dp"
        android:text="@string/login_user" />

    <com.ch.leyu.widget.view.ClearEditText
        android:id="@+id/act_et_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/act_tv_user"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/act_tv_user"
        android:background="@drawable/login_edittext_bg" />

    <TextView
        android:id="@+id/act_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_et_user"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/act_et_password"
        android:text="@string/login_ps" />

    <com.ch.leyu.widget.view.ClearEditText
        android:id="@+id/act_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/act_tv_password"
        android:layout_alignLeft="@+id/act_et_user"
        android:layout_alignParentRight="true"
        android:background="@drawable/login_edittext_bg"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/act_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="@string/login_btn" />

</RelativeLayout>
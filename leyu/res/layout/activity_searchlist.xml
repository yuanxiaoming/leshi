<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.ch.leyu.view.ClearEditText
        android:id="@+id/act_searchlist_et_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/act_searchlist_bt_latest"
        android:background="@drawable/login_edittext_bg"
        android:ems="10" />

    <Button
        android:id="@+id/act_searchlist_bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Button" />

    <TextView
        android:id="@+id/act_searchlist_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_searchlist_et_detail"
        android:layout_below="@+id/act_searchlist_bt_search"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/act_searchlist_bt_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_searchlist_bt_search"
        android:layout_toLeftOf="@+id/act_searchlist_bt_search"
        android:text="@string/search_newst" />

    <Button
        android:id="@+id/act_searchlist_bt_hots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/act_searchlist_bt_latest"
        android:layout_alignBottom="@+id/act_searchlist_bt_latest"
        android:layout_alignParentRight="true"
        android:text="@string/search_hottest" />

    <GridView
        android:id="@+id/act_searchlist_gd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/act_searchlist_bt_latest"
        android:layout_marginTop="15dp"
        android:numColumns="2" >
    </GridView>

</RelativeLayout>
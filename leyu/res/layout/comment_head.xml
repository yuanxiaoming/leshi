<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <com.ch.leyu.widget.view.ClearEditText
        android:id="@+id/comment_head_et_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/comment_head_bt_commit"
        android:background="@drawable/login_edittext_bg"
        android:ems="10" />

    <Button
        android:id="@+id/comment_head_bt_commit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/comment_head_et_detail"
        android:layout_alignBottom="@+id/comment_head_et_detail"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/comment_selector"
        android:text="@string/comment_publish"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" 
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/fragment_c_item_imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/base_article_smallimage" />

    <TextView
        android:id="@+id/fragment_c_item_textView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_c_item_imageView1"
        android:layout_alignRight="@+id/fragment_c_item_imageView1"
        android:background="#B2B3B3"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#006600" />

    <TextView
        android:id="@+id/fragment_c_item_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_c_item_imageView1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/fragment_c_item_imageView1"
        android:maxLines="4"
        android:text="aaa" />

</RelativeLayout>
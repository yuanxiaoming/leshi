<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/launcher_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/first_page_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/launcher_first_bg" />

    <ImageView
        android:id="@+id/c_page_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/launcher_seconed_bg" />

    <Button
        android:id="@+id/start_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/launcher_btn_bg_selector"
        android:text="@string/launch_start_app_btn_txt"
        android:textColor="@android:color/white" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgp_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#Ac000000">

        <RadioButton
            android:id="@+id/rb_main_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="账号"
            android:drawablePadding="2dp"
            android:textSize="13sp"
            android:checked="true"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/account_btn_selector"/>

        <RadioButton
            android:id="@+id/rb_main_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="发现"
            android:drawablePadding="2dp"
            android:textSize="13sp"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/find_btn_selector"/>

        <RadioButton
            android:id="@+id/rb_main_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:drawablePadding="2dp"
            android:textSize="13sp"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/my_btn_selector"/>

        <RadioButton
            android:id="@+id/rb_main_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="设置"
            android:drawablePadding="2dp"
            android:textSize="13sp"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/setting_btn_selector" />
    </RadioGroup>

</LinearLayout>
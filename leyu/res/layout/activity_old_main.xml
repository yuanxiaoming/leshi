<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgp_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#Ac000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/account_btn_selector"
            android:gravity="center"
            android:text="炉石传说"
            android:textColor="@drawable/radiobutton_textcolor"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_main_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/find_btn_selector"
            android:gravity="center"
            android:text="英雄联盟"
            android:textColor="@drawable/radiobutton_textcolor"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_main_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/my_btn_selector"
            android:gravity="center"
            android:text="明星解说"
            android:textColor="@drawable/radiobutton_textcolor"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_main_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/setting_btn_selector"
            android:gravity="center"
            android:text="新闻资讯"
            android:textColor="@drawable/radiobutton_textcolor"
            android:textSize="13sp" />
    </RadioGroup>

</LinearLayout>
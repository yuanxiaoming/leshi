<?xml version="1.0" encoding="utf-8"?>
<com.ch.leyu.view.BaseScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ch.leyu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.ch.leyu.view.AutoScrollViewPager
            android:id="@+id/hs_auto_scroll_viewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </com.ch.leyu.view.AutoScrollViewPager>

        <com.ch.leyu.view.CircleLoopPageIndicator
            android:id="@+id/hs_cirle_pageindicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hs_auto_scroll_viewpager"
            android:layout_alignRight="@+id/hs_auto_scroll_viewpager"
            android:padding="6dp"
            app:fillColor="#339933"
            app:pageColor="@android:color/darker_gray"
            app:snap="true"
            app:strokeColor="@android:color/transparent"
            app:vpiradius="5dp" />

        <ListView
            android:id="@+id/hs_listview_news"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/hs_auto_scroll_viewpager"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <LinearLayout
            android:id="@+id/hs_ll_video"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hs_listview_news"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/hs_bt_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="赛事专区" />

            <Button
                android:id="@+id/hs_bt_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="视频库" />

            <Button
                android:id="@+id/hs_bt_raiders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="高玩攻略" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hs_ll_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hs_ll_video"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="小编推荐"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <ImageView
                    android:id="@+id/hs_img_bigRecommend1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    />

                <ImageView
                    android:id="@+id/hs_img_bigRecommend2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <com.ch.leyu.view.LYGridView
                android:id="@+id/hs_gridview_recommend"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hs_ll_edit"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="今日热播"
                android:textSize="18dp" />

            <com.ch.leyu.view.LYGridView
                android:id="@+id/hs_gridview_hot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:numColumns="2"
                android:stretchMode="columnWidth" 
                />
        </LinearLayout>
    </RelativeLayout>

</com.ch.leyu.view.BaseScrollView>